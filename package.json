{
	"name": "@zaydek/duomo",
	"version": "0.6.25",
	"main": "dist/index.css",
	"license": "MIT",
	"files": [
		"dist/",
		"src/duomo/**/*.{css,scss}",
		"duomo.scss"
	],
	"scripts": {
		"watch-consumer": "sass --watch --no-charset --no-source-map src/consumer.scss dist/index.css",
		"watch": "sass --watch --no-charset --no-source-map src/duomo/index.scss dist/index.css",
		"test": "jest",
		"build": "rm -rf dist && yarn test && yarn tsc && yarn sass --no-charset --no-source-map src/duomo/index.scss dist/index.css && yarn sass --no-charset --no-source-map src/duomo/base.scss dist/base.css",
		"publish-dist-dry-run": "yarn build && npm publish --dry-run"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@types/jest": "^26.0.15",
		"@types/react": "^16.9.55",
		"@types/sass": "^1.16.0",
		"jest": "^26.6.3",
		"prettier": "^2.1.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"sass": "^1.28.0",
		"typescript": "^4.0.5"
	}
}
