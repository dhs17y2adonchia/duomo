{
	"name": "@zaydek/sorcery",
	"version": "0.4.6",
	"main": "dist/index.css",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"scripts": {
		"build-readable": "yarn -s sass src/sass/index.scss > dist/index.css",
		"build-minified": "yarn -s sass -s compressed src/sass/index.scss > dist/index.min.css",
		"test": "jest",
		"test-watch": "jest --watch",
		"build": "yarn test && rm -rf dist && yarn tsc && yarn build-readable && yarn build-minified",
		"publish-dry-run": "yarn build && npm publish --dry-run"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"@types/react": "^16.9.55",
		"jest": "^26.6.1",
		"prettier": "^2.1.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"sass": "^1.28.0",
		"ts-jest": "^26.4.3",
		"typescript": "^4.0.5"
	}
}
