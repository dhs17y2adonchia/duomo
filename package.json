{
	"name": "@zaydek/sorcery",
	"version": "0.4.0",
	"main": "dist/index.css",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"scripts": {
		"build-readable": "node-sass --indent-type tab --indent-width 1 src/index.scss > dist/index.css",
		"build-minified": "node-sass --output-style compressed src/index.scss > dist/index.min.css",
		"clean-readable": "prettier -w dist/index.css",
		"build": "rm -rf dist && yarn tsc && yarn build-readable && yarn clean-readable && yarn build-minified",
		"publish-dist-dry-run": "yarn build && npm publish --dry-run"
	},
	"devDependencies": {
		"node-sass": "^4.14.1",
		"prettier": "^2.1.2",
		"typescript": "^4.0.5"
	}
}
