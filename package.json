{
	"name": "@zaydek/duomo",
	"version": "0.5.0",
	"main": "dist/index.css",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"scripts": {
		"watch-duomo": "watch --interval 0.1 'yarn -s sass --no-charset src/sass/index.scss dist/index.css' src",
		"build-duomo": "sass --no-charset src/sass/index.scss dist/index.css",
		"build-reset": "sass --no-charset src/sass/reset.scss dist/reset.css",
		"test": "jest",
		"build": "rm -rf dist && yarn build-duomo && yarn build-reset",
		"publish-dist-dry-run": "yarn build && npm publish --dry-run"
	},
	"devDependencies": {
		"@types/jest": "^26.0.15",
		"@types/react": "^16.9.55",
		"jest": "^26.6.1",
		"prettier": "^2.1.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"sass": "^1.28.0",
		"ts-jest": "^26.4.3",
		"typescript": "^4.0.5"
	}
}
