{
	"name": "sorcery",
	"license": "MIT",
	"scripts": {
		"build-readable": "node-sass src/index.scss --output-style expanded --indent-type tab --indent-width 1 > build/index.css",
		"build-minified": "node-sass src/index.scss --output-style compressed --indent-type tab --indent-width 1 > build/index.min.css",
		"build": "yarn build-readable && yarn build-minified"
	},
	"devDependencies": {
		"node-sass": "^4.14.1",
		"prettier": "^2.1.2"
	}
}
